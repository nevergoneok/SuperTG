<resources>

    <!-- Base application theme.  主页 -->
    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--设置appBar的背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--设置状态栏的颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--textColorPrimary：设置appBar上字体的颜色-->
        <item name="colorAccent">@color/colorAccent</item>·
        <item name="toolbarStyle">@style/LightToolbar</item>
    </style>

    <style name="LightToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/LightToolbarThemeOverlay</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <!--表示CheckBox、EditText、Switch、Spinner、RadioButton等控件默认时的色调 -->
    <style name="LightToolbarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <!--未上滑的初始字体颜色-->
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!--查看图片页面-->
    <style name="ViewerTheme" parent="Base.ViewerTheme" />

    <style name="Base.ViewerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="toolbarStyle">@style/DarkToolbar</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="DarkToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/DarkToolbarThemeOverlay</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
    </style>

    <style name="DarkToolbarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- loading 样式 -->
    <style name="loadstyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/iosstyle_halftransparent_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
